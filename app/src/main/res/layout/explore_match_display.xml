<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:visibility="visible"
        android:layout_marginTop="240dp"
        android:indeterminate="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/marker_progressExplore"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center_vertical|center_horizontal"/>
    <TextView
        android:id="@+id/noCouchTextViewExplore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Please wait while loading..."
        android:textColor="@color/black_overlay" />
    <TextView
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TutHeadingText"
        android:textColor="@color/colorPrimary"
        android:text="Fishing in "
        android:textSize="20sp"
        android:id="@+id/headingEMD"/>

    <View
        android:id="@+id/headingDividerEMD"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary" />

    <View
        android:id="@+id/dividerView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="20dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ed_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>