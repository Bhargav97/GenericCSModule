<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fafafa"
    android:id="@+id/mainLayoutCR">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewExploreOne"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blue" />


        <TextView
            android:id="@+id/titletext1"
            style="@style/TutHeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-regular"
            android:gravity="center"
            android:text="Let's see!"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/titletext2"
            style="@style/TutHeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titletext1"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-regular"
            android:gravity="center"
            android:text="This is where you will see requests that the Surfers send you."
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/marker_progressCR"
        style="?android:attr/progressBarStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="50dp"
        android:indeterminate="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/noCouchTextViewCR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Please wait while loading..."
        android:textColor="@color/black_overlay"
        android:textSize="15sp" />




    <android.support.v7.widget.RecyclerView
        android:id="@+id/cr_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
