<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:id="@+id/profilePic"
        android:elevation="2dp"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp" />
    <LinearLayout
        android:id="@+id/extProfileLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#80000000"/>

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/profile_grad"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:inputType="textMultiLine"
                android:layout_marginTop="100dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp"
                android:id="@+id/descTextEP"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:drawableLeft="@drawable/ic_person_profile"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wiliam Snoe"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp"
                android:id="@+id/nameTextEP"/>
            <TextView
                android:drawableLeft="@drawable/ic_email_profile"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wiliam Snoe"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp"
                android:id="@+id/emailTextEP"/>
            <TextView
                android:drawableLeft="@drawable/ic_location_profile"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wiliam Snoe"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp"
                android:id="@+id/cityTextEP"/>
            <TextView
                android:drawableLeft="@drawable/ic_phone_profile"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wiliam Snoe"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp"
                android:id="@+id/phoneTextEP"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>